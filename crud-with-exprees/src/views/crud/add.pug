            input(type="text", id="name" name="name")     

            label(for="email") Email: 
            input(type="email", id="email" name="email")   

            label(for="phone") Phone: 
            input(type="number", id="phone" name="phone")   

            input.class-add(type="submit", value='Enviar')
        