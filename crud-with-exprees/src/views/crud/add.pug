doctype
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title=title
        link(rel='stylesheet', href='/stylesheets/style.css')
    body
        h1 Agregando contacto...           
          div.class-btn-add
            a.class-add(href="/api/users") Atras
        
        form.class-form-post(action="/api/users", method="post")
